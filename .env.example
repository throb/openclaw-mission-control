# BobBot Mission Control - Environment Variables
# Copy this to .env and fill in your values
# NEVER commit .env to git!

# Database (PostgreSQL)
DATABASE_URL="postgresql://bobbot:CHANGE_ME@localhost:5432/bobbot?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:18742"
NEXTAUTH_SECRET="generate-with: openssl rand -base64 32"

# Encryption key for API keys (32 bytes hex)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="generate-with: openssl rand -hex 32"

# Admin setup (first user)
ADMIN_EMAIL="your-email@example.com"

# OpenClaw integration
OPENCLAW_CONFIG_PATH="/path/to/your/.openclaw/openclaw.json"
OPENCLAW_WORKSPACE="/path/to/your/clawd"

# Optional: External services
# S3_BUCKET=""
# S3_ACCESS_KEY=""
# S3_SECRET_KEY=""
